<api xmlns="http://ws.apache.org/ns/synapse" name="_WSO2AMMetadataAPI_" context="/r4/metadata">
    <resource methods="GET" url-mapping="/*" faultSequence="_token_fault_">
        <inSequence>
            <class name="org.wso2.healthcare.apim.conformance.ConformanceMediator">
            </class>
            <!-- this is required to enable CORS response handler-->
            <loopback/>
        </inSequence>
        <outSequence>
            <send/>
        </outSequence>
    </resource>
    <handlers>
        <handler class="org.wso2.carbon.apimgt.gateway.handlers.security.CORSRequestHandler">
            <property name="apiImplementationType" value="ENDPOINT"/>
        </handler>
        <!-- <handler class="org.wso2.carbon.apimgt.gateway.handlers.ext.APIManagerCacheExtensionHandler" /> -->
        <handler class="org.wso2.carbon.apimgt.gateway.handlers.common.SynapsePropertiesHandler" />
    </handlers>
</api>
